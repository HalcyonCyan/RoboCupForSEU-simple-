<?xml version="1.0"?>
<launch>
    <!-- 地图文件路径 -->
    <arg name="map_file" default="$(find match_nav)/maps/map.yaml"/>
    
    <!-- 自定义world文件路径 -->
    <arg name="world_file" default="/home/Downloads/mapp/gazebo/robocup2023.world"/>
    
    <!-- TurtleBot3模型设置 -->
    <arg name="model" default="waffle"/>
    <arg name="x_pos" default="-3.5"/>
    <arg name="y_pos" default="-3.0"/>
    <arg name="z_pos" default="0.0"/>
    <arg name="yaw" default="1.57"/>
    
    <!-- 删除waypoints参数，保留loop参数 -->
    <arg name="loop" default="true"/>
    
    <!-- 使用模拟时间 -->
    <param name="/use_sim_time" value="true"/>
    
    <!-- Gazebo世界 -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>
    
    <!-- TurtleBot3机器人模型 -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    
    <!-- 生成机器人 -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
          args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -Y $(arg yaw) -param robot_description"
          launch-prefix="bash -c 'sleep 5; $0 $@' " />
    
    <!-- 机器人状态发布器 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="50.0" />
        <param name="use_tf_static" value="true"/>
    </node>
    
    <!-- 关节状态发布器 -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="use_gui" value="false"/>
    </node>
    
    <!-- 地图服务器 -->
    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)" respawn="true">
        <param name="frame_id" value="map"/>
    </node>
    
    <!-- 等待地图服务器启动 -->
    <rosparam param="wait_for_map_service">true</rosparam>
    
    <!-- AMCL定位 -->
    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        <param name="min_particles" value="100"/>
        <param name="max_particles" value="500"/>
        <param name="kld_err" value="0.05"/>
        <param name="kld_z" value="0.99"/>
        <param name="update_min_d" value="0.2"/>
        <param name="update_min_a" value="0.5"/>
        <param name="resample_interval" value="1"/>
        <param name="transform_tolerance" value="0.5"/>
        
        <!-- 激光参数 -->
        <param name="laser_min_range" value="0.1"/>
        <param name="laser_max_range" value="12.0"/>
        <param name="laser_max_beams" value="30"/>
        <param name="laser_model_type" value="likelihood_field"/>
        
        <!-- 里程计参数 -->
        <param name="odom_model_type" value="diff"/>
        <param name="odom_frame_id" value="odom"/>
        <param name="base_frame_id" value="base_footprint"/>
        <param name="global_frame_id" value="map"/>
        
        <!-- 初始位置 -->
        <param name="initial_pose_x" value="$(arg x_pos)"/>
        <param name="initial_pose_y" value="$(arg y_pos)"/>
        <param name="initial_pose_a" value="$(arg yaw)"/>
        
        <!-- 初始位置的不确定性 -->
        <param name="initial_cov_xx" value="0.25"/>
        <param name="initial_cov_yy" value="0.25"/>
        <param name="initial_cov_aa" value="0.25"/>
    </node>
    
    <!-- Move Base导航 -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <!-- 使用自定义参数文件 - 修正路径 -->
        <rosparam file="$(find match_nav)/params/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find match_nav)/params/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find match_nav)/params/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find match_nav)/params/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find match_nav)/params/move_base_params.yaml" command="load" />
        
        <rosparam file="$(find match_nav)/params/dwa_local_planner_params.yaml" command="load" />
        
        <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
        
        <!-- 修复TF框架配置 -->
        <param name="global_costmap/global_frame" value="map"/>
        <param name="global_costmap/robot_base_frame" value="base_footprint"/>
        
        <param name="local_costmap/global_frame" value="odom"/>
        <param name="local_costmap/robot_base_frame" value="base_footprint"/>
        
        <!-- 调整控制器频率 -->
        <param name="controller_frequency" value="10.0"/>
        <param name="planner_patience" value="5.0"/>
        <param name="controller_patience" value="15.0"/>
    </node>
    
    <!-- 航点导航器 - 删除waypoints参数传递 -->
    <node name="waypoint_navigator" pkg="match_nav" type="waypoint_navigator.py" output="screen">
        <param name="loop" value="$(arg loop)"/>
    </node>
    
    <!-- RViz可视化 -->
    <node pkg="rviz" type="rviz" name="rviz" 
          args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"
          launch-prefix="bash -c 'sleep 10; $0 $@' " />
</launch>